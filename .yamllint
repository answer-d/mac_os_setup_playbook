---
extends: default

ignore: |
  .git/
  .venv/
yaml-files:
  - '*.yaml'
  - '*.yml'
  - '.yamllint'
  - '.ansible-lint'

rules:
  comments-indentation: disable
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false
  line-length:
    max: 140
  truthy: disable
